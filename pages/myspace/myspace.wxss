
.bg {
  height: 160px;
  width: 80%;
  background-color: #30a9de;
  border: 0;
  border-radius: 20rpx;
  margin: 10px 10% 10px 10%;
}

.head {
  display: flex;
  flex-direction: column;
}

.headIcon {
  display: flex;
  justify-content: center;
  margin-top: 40px;
}

.login {
  display: flex;
  color: #fff;
  font-size: 15px;
  margin-top: 15rpx;
  justify-content: center;
}

.head image {
  border-radius: 50%;
}

.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}

.item {
  width: 80%;
  background-color: #30a9de;
  border: 0;
  border-radius: 20rpx;
  margin: 10px 10% 10px 10%;
}
.bindPhoneNum{
  background-color: #30a9de;
  border: 0;
  border-radius: 20rpx;
  margin: 10px 10% 10px 10%;
  height: 50px !important;
}

.title {
  text-align: center;
  display: flex;
  line-height: 30px;
  margin-left: 0;
}
.list .item .van-icon{
  padding-right: 5px !important;
}

.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}

